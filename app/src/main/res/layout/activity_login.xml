<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include
        layout="@layout/layout_toolbar"
        />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="14.5"
        android:orientation="vertical">

        <TextView
            style="@style/line_thin"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <!--登陆账号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_account" />

            <EditText
                android:text="15208358151"
                android:inputType="number"
                android:maxLength="11"
                android:ems="1"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="手机号码"
                android:maxEms="1"
                android:maxLines="1"
                android:singleLine="true"
                android:padding="10dp" />
        </LinearLayout>

        <TextView
            style="@style/line_thin"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <!--登陆密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/person_password" />

            <EditText
                android:text="adwlf8"
                android:id="@+id/et_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxEms="1"
                android:ems="1"
                android:maxLines="1"
                android:singleLine="true"
                android:padding="10dp" />
        </LinearLayout>

        <TextView
            style="@style/line_thin"
            android:layout_marginBottom="30dp"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <!--中部-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

                <Button
                    style="@style/login_btn"
                    android:id="@+id/btn_register"
                    android:text="注册"
                    android:background="@drawable/shape_btn_register"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.5" />

                <Button
                    style="@style/login_btn"
                    android:id="@+id/btn_login"
                    android:background="@drawable/shape_btn_login"
                    android:text="登陆" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="15dp"
                android:text="忘记密码？"
                android:textColor="#4C7694" />
        </LinearLayout>

        <!--下部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="您可以用以下方式登陆"
                android:textColor="@color/text_normal"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_login_wx"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@mipmap/login_weixin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用产品代表使用享e下" />

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_service"
                    android:textColor="@color/orange" />

                <TextView
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="和" />

                <TextView
                    android:id="@+id/tv_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_pricacy"
                    android:textColor="@color/orange" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
